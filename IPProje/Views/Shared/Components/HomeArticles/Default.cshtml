@model ArticleListModel


<div class="d-flex d-flex justify-content-between  py-3 mb-4">
    <h4 class="fw-bold">
        <span class="text-muted fw-light">En Son Haberler</span>
    </h4>
</div>

<section>
    <div class="row">
        @foreach (var item in Model.Articles)
        {
            <div class="col-3">
                <div class="card">
                    <img src="~/images/@item.Image.FileName" class="card-img-top" alt="deneeeada">
                    <div class="card-body">
                        <div>
                            <h5 class="card-title">@item.Title</h5>
                            <p>
                                @(item.Content.Length > 280 ? item.Content.Substring(0, 280) : item.Content)...
                            </p>
                            <a asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">[Devamını Oku]</a>
                            <p class="fst-italic">@item.CreatedDate.ToString("dd/MM/yyyy")</p>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <p><i class="fa-solid fa-pen"></i> @item.User.UserName</p>
                            <p class="fw-bold">Kategori : <span class="fw-light">@item.Category.Name</span></p>
                        </div>
                        <span><i class="fa-solid fa-eye"></i> @item.ViewCount</span>
                    </div>
                </div>
            </div>
        }
    </div>
</section>