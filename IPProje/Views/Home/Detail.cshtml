@model ArticleModel

<section class="blog-posts">
    <div class="container">
        <div class="row mt-5 mb-5">
            <div class="col-lg-12 shadow-lg bg-body rounded p-3">
                <div class="mt-2 mb-3">
                    <h1>@Model.Title</h1>
                </div>
                <div class="mb-3">
                    <img src="~/images/@Model.Image.FileName" class="card-img-top" height="700px" alt="...">
                    <div class="">
                        <p class="fs-5 mt-3">@Model.Content</p>
                        <p class="fw-semibold">Tarih: <small class="text-muted">@Model.CreatedDate.ToString("dd/MM/yyyy")</small></p>
                        <p class="fw-semibold">Yazan: <span class="fw-normal">@Model.User.UserName</span> </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
