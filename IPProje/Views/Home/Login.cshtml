@model UserLoginModel

@{
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/IPProje.styles.css" asp-append-version="true" />
</head>
<body>
    
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="d-flex align-items-center justify-content-center h-100 shadow position-relative" style="background-color:floralwhite ;">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-close position-absolute top-0 start-100 translate-middle"></a>
                <div style="margin-left: auto; margin-right: auto; width: 40%;">
                    <form asp-action="Login" id="formAuthentication" method="post">
                        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="text-center mb-5">
                            <h1 class="display-6">Giriş</h1>
                        </div>
                        <div class="form-outline mb-4">
                            <input asp-for="Email" type="email" id="email" name="email" class="form-control form-control-lg" autofocus/>
                            <label asp-for="Email" for ="Email" class="form-label" for="form1Example13">Email address</label>
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-outline mb-2">
                            <input asp-for = "Password" type="password" id="password" name = "password" class="form-control form-control-lg" />
                            <label class="form-label" for="password">Password</label>
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-outline mb-4">
                            <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                            <label class="form-check-label" for="form1Example3"> Beni hatırla </label>
                            <a asp-area="" asp-controller="Home" asp-action="Register" class="float-end text-decoration-none">Hesabın yok mu ?</a>
                        </div>
                        <div class="d-flex justify-content-around align-items-center mb-4">
                            <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Giriş Yap</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

</body>
</html>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
