@model UserRegisterModel

@{
    Layout = null;
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/IPProje.styles.css" asp-append-version="true" />
</head>
<body>

    <section class="vh-100">
        <div class="container p-5 h-100">
            <div class="d-flex align-items-center justify-content-center h-100 shadow position-relative" style="background-color:floralwhite ;">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn-close position-absolute top-0 start-100 translate-middle"></a>
                <div style="margin-left: auto; margin-right: auto; width: 40%;">
                    
                    <form asp-action="Register" id="formAuthentication" method="post">
                        
                        <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                        
                        <div class="text-center mb-5">
                            <h1 class="display-6">Kayıt Ol</h1>
                        </div>
                        <div class="form-outline mb-2">
                            <label asp-for="FirstName" class="form-label">Ad</label>
                            <input asp-for="FirstName" class="form-control"/>
                            <span asp-validation-for="FirstName"></span>
                        </div>
                        <div class="form-outline mb-2">
                            <label asp-for="LastName" class="form-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label class="form-label" asp-for="UserName">Kullanıcı Adı</label>
                            <input asp-for="UserName" class="form-control">
                            <span asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-outline mb-2">
                            <label asp-for="Email" class="form-label">Email Adresi</label>
                            <input asp-for="Email" type="email" id="email" name="email" class="form-control" autofocus />
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-2">
                            <label asp-for="Password" class="form-label"></label>
                            <input type="password" asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="mb-2">
                            <label asp-for="PasswordConfirm"></label>
                            <input type="password" asp-for="PasswordConfirm" class="form-control" />
                            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label class="form-label" asp-for="PhoneNumber">Telefon Numarası</label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control">
                            <span asp-validation-for="PhoneNumber"></span>
                        </div>
                        <div class="form-outline mb-2">
                            <a asp-area="" asp-controller="Home" asp-action="Login" class="text-decoration-none">Zaten bir hesabın var mı ?</a>
                        </div>

                        <div class="d-flex justify-content-around align-items-center mb-4 form-group">
                            <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Kaydol</button>
                        </div>
                    
                    </form>
                
                </div>
            </div>
        </div>
    </section>

</body>
</html>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}