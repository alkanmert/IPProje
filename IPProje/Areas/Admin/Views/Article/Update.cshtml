@model ArticleUpdateModel
<div class="container mt-5 shadow pb-3" style="background-color:white">

    <div class="d-flex d-flex justify-content-between  py-3 mb-4">
        <h4 class="fw-bold">
            <span class="text-muted fw-light">Haber Yönetimi /</span> Haber Ekle
        </h4>
    </div>
    <form asp-controller="Article" asp-action="Update" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="CategoryId">Kategori</label>

            <select class="form-control" id="categoryList" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="form-group my-3">
            <label asp-for="Title">Başlık</label>
            <input asp-for="Title" class="form-control" placeholder="Makale Başlığı">
        </div>
        <div class="form-group mb-3">
            <label asp-for="Content">İçerik</label>
            <textarea style="min-height:300px" asp-for="Content" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Image.FileName" for="defaultFormControlInput" class="form-label d-block">Mevcut Resim</label>
            <img src="~/images/@Model.Image.FileName" alt="@Model.Title" class="mb-3" style="height:500px; width: 600px" />
        </div>
        <div class="form-group pb-3">
            <label asp-for="Photo">Resim Seçiniz</label>
            <input asp-for="Photo" accept="image/*" class="form-control" type="file" />
            <span asp-validation-for="Photo"></span>
        </div>
        <div class="d-flex justify-content-start">
            <div class="form-grup">
                <button type="submit" class="btn btn-outline-primary">Kaydet</button>
                <button asp-area="Admin" asp-controller="Article" asp-action="Index" asp-for="" type="submit" class="btn btn-outline-danger">İptal</button>
            </div>
        </div>
    </form>


</div>
