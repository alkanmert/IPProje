﻿
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/adminMenu.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IPProje.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body style="background-color: aliceblue">
    <header>
        <div class="d-flex flex-column flex-shrink-0 sidebar-wrap fixed-top">
            <ul class="nav nav-pills flex-column mb-auto">
                @await Component.InvokeAsync("DashboardHeader")
                <hr />
                <li class="nav-item">
                    <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="nav-link" aria-current="page">
                        <div class="icon-wrap">
                            <i class="fas fa-home"></i>
                        </div>
                        <span style="color:black" class="text-truncate">Dashboard</span>
                    </a>
                </li>
                <hr>
                <li class="mt-0">
                    <a asp-area="Admin" asp-controller="Article" asp-action="Index" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fas fa-pen"></i>
                        </div>
                        <span class="text-truncate" data-il8n="Accounts">Haber Yönetimi</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fa fa-list"></i>
                        </div>
                        <span class="text-truncate" data-il8n="Accounts">Kategori Yönetimi</span>
                    </a>
                </li>
                <hr />
                <li>
                    <a asp-area="Admin" asp-controller="User" asp-action="Index" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fa fa-users"></i>
                        </div>
                        <span class="text-truncate" data-il8n="Accounts">Kullanıcılar</span>
                    </a>
                </li>
                <li>
                    <a asp-area="Admin" asp-controller="Role" asp-action="Index" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fa fa-unlock"></i>
                        </div>
                        <span class="text-truncate" data-il8n="Accounts">Rol</span>
                    </a>
                </li>
                <hr />
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fa-solid fa-arrow-left"></i>
                        </div>
                        <span class="text-truncate" data-il8n="Accounts">Kullanıcı Arayüzü</span>
                    </a>
                </li>
                <hr />
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Logout" class="nav-link">
                        <div class="icon-wrap">
                            <i class="fas fa-sign-out-alt"></i>
                        </div>
                        <span data-il8n="Accounts">Çıkış</span>
                    </a>
                </li>
            </ul>

        </div>
    </header>
    <div>
        @RenderBody()
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", false);
    @await Component.InvokeAsync("NToastNotify")
    <script defer src="https://static.cloudflareinsights.com/beacon.min.js/v84a3a4012de94ce1a686ba8c167c359c1696973893317" integrity="sha512-euoFGowhlaLqXsPWQ48qSkBSCFs3DPRyiwVu3FjR96cMPx+Fr+gpWRhIafcHwqwCqWS42RZhIudOvEI+Ckf6MA==" data-cf-beacon='{"rayId":"81db0d7128d698af","version":"2023.10.0","token":"cd0b4b3a733644fc843ef0b185f98241"}' crossorigin="anonymous"></script>
</body>
</html>
