@model List<UserModel>
<div class="container mt-5 shadow" style="background-color:white">

    <div class="d-flex d-flex justify-content-between  py-3 mb-4">
        <h4 class="fw-bold">
            <span class="text-muted fw-light">Kullanıcı Yönetimi /</span> Kullanıcılar
        </h4>

        <a asp-area="Admin" asp-controller="User" asp-action="Add" class="icon-link icon-link-hover" style="--bs-icon-link-transform: translate3d(0, -.125rem, 0);">
            <i class="bi fa-solid fa-square-plus" aria-hidden="true"><use xlink:href="#clipboard"></use></i>
            Kullanıcı Ekle
        </a>

    </div>

    <table id="usersTable" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>Email</th>
                <th>Kullanıcı Adı</th>
                <th>Email Doğrulaması</th>
                <th>Telefon Numarası</th>
                <th>Rol</th>
                <th>Bağlantı Hataları</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr name="@user.Id">
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.UserName</td>
                    <td>@(user.EmailConfirmed ? "Onaylanmış" : "Onaylanmamış")</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Role</td>
                    <td>@user.AccessFailedCount</td>
                    <td>
                        <a class="btn btn-primary btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-userId="@user.Id">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                        <a class="btn btn-danger btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userId="@user.Id">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>İsim</th>
                <th>Soyisim</th>
                <th>Email</th>
                <th>Kullanıcı Adı</th>
                <th>Email Doğrulaması</th>
                <th>Telefon Numarası</th>
                <th>Rol</th>
                <th>Bağlantı Hataları</th>
                <th>İşlemler</th>
            </tr>
        </tfoot>
    </table>
</div>


@section Scripts {
    <script>
        new DataTable('#usersTable');
    </script>
}
